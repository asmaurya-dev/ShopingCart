
@model IEnumerable<ShopingCart.Models.Product>
<style>
    #tbl {
        border: solid 5px;
        border-top-color: #8B0000;
        border-right-color: #8B0000;
        border-bottom-color: #8B0000;
        border-left-color: #8B0000;
        width: 100%;
        border-collapse: collapse;
        font-family: Arial, sans-serif;
        font-size: 14px;
        background-color: #ddddee; /* Light grayish-blue background color */
    }

    #tbl th, #tbl td {
        border: solid 1px #8B0000; /* Dark border for table cells */
        padding: 10px; /* Increased padding inside cells */
        text-align: left; /* Align text left within cells */
    }

    #tbl th {
            background-color: #0437F2; /* Dark purple background color for headers */
        color: white; /* White text color for headers */
        font-weight: bold; /* Bold font for headers */
    }

    #tbl tbody tr:nth-child(even) {
        background-color: #f0f0f0; /* Light gray alternate row color */
    }

    #tbl tbody td img {
        max-width: 80px; /* Limit the width of images to 80px */
        height: auto; /* Maintain aspect ratio */
        display: block; /* Ensure images behave as block elements */
        margin: 0 auto; /* Center images horizontally */
    }

    #tbl tbody td button {
        margin-right: 5px; /* Add space between buttons */
    }
</style>

<table id="tbl">
    <thead>
        <tr>
            <th>ProductId</th>
            <th>ProductName</th>
            <th>ProductPrice</th>
            <th>IsActive</th>
            <th>EntryDate</th>
            <th>ProductImage</th>
            <th>CategoryName</th>
            <th style="padding-left: 50px;">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model)
        {
            <tr>



                <td>@x.Id</td>
                <td>@x.ProductName</td>
                <td>@x.ProductPrice</td>

                <td>@(x.IsActive == true ? "Active" : "InActive")</td>
                <td>@x.EntryDate</td>
                <td><img src="/Images/@x.ProductImage" height="50" width="80" /></td>
                <td>@x.CategoryName</td>
                <td>
                    <button class='btn btn-success' data-toggle="modal" data-target="#Modal" onclick="GetListById(@x.Id)">Edit</button>
                    <button class='btn btn-danger delete-btn' onclick="if(confirm('Are you sure you want to delete?')){DeleteProduct(@x.Id)}">Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>
