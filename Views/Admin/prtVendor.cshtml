@model IEnumerable<ShopingCart.Models.Vendor>
<style>


    #tblEmployee tr:nth-child(even) {
        background-color: black;
    }

    #tblEmployee, th, td {
        border: 1px solid white;
    }

        #tblEmployee tr:hover {
            background-color: deeppink;
        }

    body {
        background: black;
    }

    .a {
        background: white;
        height: 1030px;
        width: 500px;
        margin: 100px auto;
        border-radius: 30px
    }

    

    input[type=submit] {
        color: white;
    }

    #table {
        border: solid 2px;
        border-top-color: black;
        border-right-color: black;
        border-bottom-color: black;
        border-left-color: black;
        width: 100%;
        border-collapse: collapse;
        font-family: Arial, sans-serif;
        font-size: 14px;
        background-color: #ddddee; /* Light grayish-blue background color */
    }

        #table th, #table td {
            border: solid 1px black; /* Dark border for table cells */
            padding: 10px; /* Increased padding inside cells */
            text-align: left; /* Align text left within cells */
        }

        #table th {
            background-color: black; /* Dark purple background color for headers */
            color: white; /* White text color for headers */
            font-weight: bold; /* Bold font for headers */
        }

        #table tbody tr:nth-child(even) {
            background-color: #f0f0f0; /* Light gray alternate row color */
        }


</style>
<table id="table">

    <thead>
        <tr>
            <th>Vendor Id</th>
            <th>Vendor Name</th>
            <th>Vendor Email</th>
            <th>Vendor Address</th>
            <th>Entry Date</th>
            <th>Modify Date</th>
            <th>Status</th>
            <th>Edit </th>
            <th>Delete </th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.VendorName</td>
                <td>@item.VendorEmail</td>
                <td>@(item.VendorAddress)</td>
                <td>@item.EntryDate</td>
                <td>@item.ModifyDate</td>
                <td>@(item.IsActive ? "Active" : "Inactive")</td>

               
                <td>
                    <button class='btn btn-success' onclick='getVendorById(@item.Id)' data-toggle="modal" data-target="#Modal">Edit</button>
                </td>
                <td>
                    <button class='btn btn-danger delete-btn' data-id="" onclick="if(confirm('Are you sure you want to delete?')) { deleteVendornById(@item.Id) }">Delete</button>
                </td>
            </tr>
        }

    </tbody>
</table>


