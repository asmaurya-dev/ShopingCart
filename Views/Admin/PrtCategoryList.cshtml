@model IEnumerable<ShopingCart.Models.Category>
<style>
    #table {
        border: solid 2px;
        border-top-color: black;
        border-right-color: black;
        border-bottom-color: black;
        border-left-color: black;
        width: 100%;
        border-collapse: collapse;
        font-family: Arial, sans-serif;
        font-size: 14px;
        background-color: #ddddee; /* Light grayish-blue background color */
    }

        #table th, #table td {
            border: solid 1px black; /* Dark border for table cells */
            padding: 10px; /* Increased padding inside cells */
            text-align: left; /* Align text left within cells */
        }

        #table th {
            background-color: black; /* Dark purple background color for headers */
            color: white; /* White text color for headers */
            font-weight: bold; /* Bold font for headers */
        }

        #table tbody tr:nth-child(even) {
            background-color: #f0f0f0; /* Light gray alternate row color */
        }
</style>

<table id="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Category Name</th>
            <th>IsActive</th>
            <th>Entry Date</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CategoryId</td>
                <td>@item.CategoryName</td>
                <td>@(item.IsActive ? "Active" : "Inactive")</td>
                <td>@item.EntryDate</td>

                <td>
                    <button class='btn btn-success' onclick='GetCategoryById(@item.CategoryId)' data-toggle="modal" data-target="#myModal">Edit</button>
                    <button class='btn btn-danger delete-btn' data-id="" onclick="if(confirm('Are you sure you want to delete?')) { DeleteCategory(@item.CategoryId) }">Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>

